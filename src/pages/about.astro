---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About me and me alone";

const identity = {
  firstName: "Mister Lobster",
  country: "Atlantis",
  occupation: "Food in Waiting",
  hobbies: ["lobstering", "swimming", "hanging with the bros"],
};

const skills = ["shell-armor", "red color", "snapping", "Astro", "antennae"];

// Variables for conditional content display ->
const happy = true;
const finished = false;
const goal = 3;

// CSS Custom Properties to be inserted with `define:vars={{ â€¦ }}`
const skillColor = "salmon";
const bold = "bold";
const capitals = "uppercase"
---

    <BaseLayout pageTitle={pageTitle}>
      <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>
        I live in {identity.country} and I work as a {identity.occupation}.
      </li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            Two of my hobbies are: {identity.hobbies[0]} and{" "}
            {identity.hobbies[2]}.
          </li>
        )
      }
    </ul>

    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {happy && <p>I am happy to be learning Astro!</p>}
    {finished && <p>I totally ruled this tutorial and I'm done!</p>}
    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
    </BaseLayout>